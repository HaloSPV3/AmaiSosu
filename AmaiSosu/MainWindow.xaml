<Window x:Class="AmaiSosu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:amaiSosu="clr-namespace:AmaiSosu"
        mc:Ignorable="d"
        Title="HCE.AmaiSosu | OpenSauce Installer"
        Width="860"
        Height="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        SnapsToDevicePixels="True"
        Icon="/icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png" Stretch="None" AlignmentX="Left" AlignmentY="Top" />
    </Window.Background>
    <Window.DataContext>
        <amaiSosu:Main />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#e1e1e1" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="5,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1b1b1b" />
                    <Setter Property="Foreground" Value="#e1e1e1" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="0,2" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="Border.IsMouseOver" Value="True">
                    <Setter Property="Border.BorderBrush" Value="#1b1b1b" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="About" Click="About" />
            <MenuItem Header="Releases" Click="Releases" />
        </Menu>

        <!-- Body -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- Header -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="Segoe UI Light" />
                        <Setter Property="FontSize" Value="48" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </StackPanel.Resources>

                <Label Content="HCE." />
                <Label Content="Amai"
                       Foreground="Crimson" />
                <Label Content="Sosu" />
            </StackPanel>

            <Label Content="⸻ An OpenSauce Installer ⸻"
                   HorizontalContentAlignment="Center" />

            <!-- Installation -->
            <DockPanel Margin="0,10,0,0"
                       Width="360">
                <Button DockPanel.Dock="Right"
                        Content="Browse"
                        Margin="1,0,0,0"
                        Click="Browse" />
                <TextBox Text="{Binding Path}"
                         VerticalContentAlignment="Center"
                         Padding="2.5,0,0,0" />
            </DockPanel>

            <Border Margin="0,10,0,0"
                    IsEnabled="{Binding CanInstall}">
                <Button Content="⬛ Install OpenSauce"
                        FontSize="16"
                        IsEnabled="{Binding CanInstall}"
                        Click="Install" />
            </Border>

            <Label Margin="0,5,0,0"
                   HorizontalContentAlignment="Center"
                   Content="{Binding InstallText}" />

            <Label Margin="0,5,0,0"
                   HorizontalContentAlignment="Center"
                   Foreground="Gray"
                   Content="{Binding Version}" />
        </StackPanel>
    </Grid>
</Window>